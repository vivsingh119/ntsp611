<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">
   <!-- Date class cfg -->
   <bean id="dt"  class="java.util.Date" p:year="100" p:month="10" p:date="20"/>
   <!-- java.lang.Class cfg -->
   <bean id="cls"  class="java.lang.Class" factory-method="forName" c:clazz="java.util.Date" />
   <!-- Cfg Dependent class  -->
   <bean id="dept"  class="com.nt.beans.Department" c:dno="9001" c:dname="IT" c:startDate-ref="dt"/>
   
   <!-- Target bean calss cfg -->
   <bean id="emp"  class="com.nt.beans.Employee"   p:empId="101" p:ename="raja" p:dept-ref="dept" p:clazz-ref="cls"/>   

</beans>
